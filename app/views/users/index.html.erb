<div class="container">
<section>
    <h1 class="text-center m-5"  >LISTA DE USUARIOS</h1>
</section>

<div class="table-responsive-sm">
<table class="table table-hover">
    <tr>
        <thead class="thead-dark ">
            <th>Nombre</th>
            <th>Apellido</th>
            <th>Documento</th>
            <th>Telefono</th>
            <th>Opciones</th>
        </thead>
    </tr>
    <tr>
    <% @users.each do |user|%>
        <td> <%= user.name %></td>
        <td> <%= user.surname %></td>
        <td> <%= user.document %></td>
        <td> <%= user.phone %></td>
        <td>
            <%= link_to 'EDITAR', edit_user_path(user)%> 
            
            <%= link_to 'BORRAR', user, method: :delete, data:{confirm:"Desea Eliminar"} %>
        </td>
    </tr>
    <% end %>
</table>
</div>

</div>